<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:gravity="center"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/dialog_shape">

    <TextView
        android:text="STORE"
        android:textColor="@color/store"
        android:fontFamily="@font/undinaru"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:paddingLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!-- shape types -->
        <!-- text and preview of currently selected -->
        <RelativeLayout

            android:id="@+id/shape_type_section"
            android:onClick="openShapeTypeStore"
            android:padding="10dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shape_type_text"
                android:textStyle="bold"
                android:fontFamily="@font/undinaru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shape Type"
                android:textSize="25sp"/>

            <RelativeLayout

                android:paddingTop="10sp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/shape_type_text"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shape_type_image"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/shape_type_set"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/undinaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textSize="18sp"/>

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/anchor"
            android:layout_toRightOf="@+id/shape_type_section"
            android:layout_width="0sp"
            android:layout_height="0sp">

        </View>

        <!-- shape colors -->
        <!-- text and preview of currently selected -->
        <!--android:layout_toRightOf="@+id/shape_type_section"-->
        <RelativeLayout

            android:id="@+id/shape_color_section"
            android:onClick="openShapeColorStore"
            android:layout_toRightOf="@+id/anchor"
            android:padding="10dp"
            android:layout_marginLeft="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shape_color_text"
                android:textStyle="bold"
                android:fontFamily="@font/undinaru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shape Theme"
                android:textSize="25sp"/>

            <RelativeLayout
                android:layout_below="@+id/shape_color_text"
                android:paddingTop="10sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shape_color_image"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/shape_color_set"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/undinaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textSize="18sp"/>

            </RelativeLayout>
        </RelativeLayout>

        <!-- background -->
        <!-- text and preview of currently selected -->
        <RelativeLayout

            android:id="@+id/background_section"
            android:onClick="openBackgroundStore"
            android:layout_below="@+id/shape_type_section"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/background_text"
                android:textStyle="bold"
                android:fontFamily="@font/undinaru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background"
                android:textSize="25sp"/>
            <RelativeLayout
                android:layout_below="@+id/background_text"
                android:layout_centerHorizontal="true"
                android:paddingTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/background_image"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>



    <TextView
        android:id="@+id/ok_button"
        android:fontFamily="@font/undinaru"
        android:text="@string/ok"
        android:textColor="#000000"
        android:textSize="40sp"
        android:soundEffectsEnabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
