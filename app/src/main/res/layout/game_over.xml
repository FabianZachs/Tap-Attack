<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:gravity="center"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/dialog_shape">

<TextView
    android:text="GAME OVER"
    android:textColor="@color/soundoff"
    android:fontFamily="@font/undinaru"
    android:textSize="50sp"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"/>

<RelativeLayout
    android:paddingLeft="10sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <RelativeLayout

        android:id="@+id/score_section"
        android:padding="10dp"
        android:layout_marginRight="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/score_text"
            android:textStyle="bold"
            android:fontFamily="@font/undinaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE: 0"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/best_score_text"
            android:layout_marginTop="5sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/undinaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEST SCORE: 0"
            android:textStyle="bold"
            android:layout_below="@id/score_text"
            android:textSize="20sp"/>


    </RelativeLayout>

    <View
        android:id="@+id/anchor"
        android:layout_toRightOf="@+id/score_section"
        android:layout_width="0sp"
        android:layout_height="0sp">

    </View>

    <!-- shape colors -->
    <!-- text and preview of currently selected -->
    <!--android:layout_toRightOf="@+id/shape_type_section"-->
    <RelativeLayout

        android:id="@+id/streak_section"
        android:layout_toRightOf="@+id/anchor"
        android:padding="10dp"
        android:layout_marginLeft="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/streak_text"
            android:textStyle="bold"
            android:fontFamily="@font/undinaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STREAK: 0"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/best_streak_text"
            android:layout_marginTop="5sp"
            android:layout_below="@+id/streak_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:fontFamily="@font/undinaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEST STREAK: 0"
            android:textSize="20sp"/>

    </RelativeLayout>

    <!-- background -->
    <!-- text and preview of currently selected -->
    <RelativeLayout

        android:id="@+id/background_section"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/score_section"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/share_text"
            android:textStyle="bold"
            android:fontFamily="@font/undinaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:textSize="25sp"/>
    </RelativeLayout>
</RelativeLayout>



<TextView
    android:id="@+id/ok_button"
    android:fontFamily="@font/undinaru"
    android:text="@string/ok"
    android:textColor="#000000"
    android:textSize="50sp"
    android:soundEffectsEnabled="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <com.google.android.gms.ads.AdView
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_below="@id/pauseSelections"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
