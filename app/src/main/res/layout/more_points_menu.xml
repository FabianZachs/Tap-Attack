<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:fontFamily="@font/undinaru"
        android:textStyle="bold"
        android:gravity="center"
        android:text="MORE POINTS!"
        android:textColor="@color/store"
        android:textSize="50sp" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:onClick="extraPointsViaVidClick"
        android:background="@drawable/stateselector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/more_points_text"
            android:padding="4sp"
            android:textSize="30sp"
            android:text="+500 POINTS"
            android:layout_marginLeft="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/more_points_image"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="75sp"
            android:layout_height="76sp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="15sp"
            android:src="@drawable/playvideobutton"
            />
        <ImageView
            android:id="@+id/item_locked_image"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="15sp"
            />


    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:onClick="doublePointsPurchaseClick"
        android:background="@drawable/stateselector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/double_points_text"
            android:padding="4sp"
            android:textSize="30sp"
            android:text="DOUBLE POINTS"
            android:layout_marginLeft="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/double_points_image"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="15sp"
            android:src="@drawable/thirdmultiplier"
            />
        <ImageView
            android:id="@+id/locked_image"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="15sp"
            android:src="@drawable/lockeditem"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/undinaru"
        android:soundEffectsEnabled="false"
        android:text="@string/ok"
        android:textColor="#000000"
        android:textSize="40sp" />


</LinearLayout>
