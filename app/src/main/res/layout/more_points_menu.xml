<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:fontFamily="@font/undinaru"
        android:text="STORE"
        android:textColor="@color/store"
        android:textSize="50sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:paddingLeft="10sp">

        <!-- shape types -->
        <!-- text and preview of currently selected -->
        <RelativeLayout

            android:id="@+id/shape_type_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:onClick="openShapeTypeStore"
            android:padding="10dp">

            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/undinaru"
                android:text="Shape Type"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/score_text"
                android:layout_centerHorizontal="true"
                android:paddingTop="10sp">

                <ImageView
                    android:id="@+id/shape_type_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/best_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/undinaru"
                    android:text="PLACEHOLDER"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/anchor"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_toRightOf="@+id/shape_type_section">

        </View>

        <!-- shape colors -->
        <!-- text and preview of currently selected -->
        <!--android:layout_toRightOf="@+id/shape_type_section"-->
        <RelativeLayout

            android:id="@+id/shape_theme_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_toRightOf="@+id/anchor"
            android:onClick="openShapeColorStore"
            android:padding="10dp">

            <TextView
                android:id="@+id/shape_theme_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/undinaru"
                android:text="Shape Theme"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shape_theme_text"
                android:layout_centerHorizontal="true"
                android:paddingTop="10sp">

                <ImageView
                    android:id="@+id/shape_theme_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/shape_theme_image_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/undinaru"
                    android:text="PLACEHOLDER"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>

        <!-- background -->
        <!-- text and preview of currently selected -->
        <RelativeLayout

            android:id="@+id/background_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shape_type_section"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15sp"
            android:layout_toLeftOf="@id/anchor"
            android:onClick="openBackgroundStore"
            android:padding="10dp">

            <TextView
                android:id="@+id/background_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/undinaru"
                android:text="Background"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/background_text"
                android:layout_centerHorizontal="true"
                android:paddingTop="10sp">

                <ImageView
                    android:id="@+id/background_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/gamemode_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shape_theme_section"
            android:layout_marginLeft="15sp"
            android:layout_toRightOf="@+id/anchor"
            android:onClick="openGameModeStore"
            android:padding="10dp">

            <TextView
                android:id="@+id/gamemode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/undinaru"
                android:text="Game Mode"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gamemode_text"
                android:layout_centerHorizontal="true"
                android:paddingTop="10sp">

                <ImageView
                    android:id="@+id/gamemode_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/pointmultiplier_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_section"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:layout_toLeftOf="@id/anchor"
            android:onClick="openPointmultiplierStore"
            android:padding="10dp">

            <TextView
                android:id="@+id/pointmultiplier_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/undinaru"
                android:text=" Multiplier "
                android:textSize="23sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pointmultiplier_text"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/pointmultiplier_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/warning_color_streak_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gamemode_section"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/anchor"
            android:onClick="openWarningColorStreakStore"
            android:padding="10dp">

            <TextView
                android:id="@+id/warning_color_streak_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/undinaru"
                android:text="Color Streak"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/warning_color_streak_text"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/warning_color_streak_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/undinaru"
        android:soundEffectsEnabled="false"
        android:text="@string/ok"
        android:textColor="#000000"
        android:textSize="40sp" />


</LinearLayout>
