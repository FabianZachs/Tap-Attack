<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_store_section"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:background="#ffffff"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/section_title_text"
                android:layout_width="130sp"
                android:gravity="center"
                android:text="SECTION NAME"
                android:fontFamily="@font/undinaru"
                android:textStyle="bold"
                android:layout_height="30sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/titleholderupsidedown"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/store_back_image"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".7"
            android:scaleY=".7"
            android:src="@drawable/storebackbutton"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7sp"
            android:layout_marginRight="25sp"
            android:layout_marginEnd="25sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/points_image"
                android:src="@drawable/curvedstar"
                android:layout_width="20sp"
                android:layout_height="20sp" />

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/store"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="10000"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/circleitemhighlight"/>
            <ImageView
                android:id="@+id/item_highlight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/highlightstar1"/>
            <ImageView
                android:id="@+id/item_highlight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/highlightstar3"/>

            <ImageView
                android:id="@+id/selected_item"
                android:src="@drawable/primarythemetemplate"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/random_unlock_section"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17sp"
            android:layout_marginLeft="25sp"
            android:layout_marginStart="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/random_unlock_text"
                android:fontFamily="@font/undinaru"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="RANDOM UNLOCK\n 500"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/button3"
                android:layout_width="80sp"
                android:layout_height="50sp" />
            <ImageView
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:src="@drawable/curvedstar"
                android:layout_alignRight="@+id/random_unlock_text"
                android:layout_alignEnd="@+id/random_unlock_text"
                android:layout_alignBottom="@+id/random_unlock_text"
                android:layout_marginBottom="5sp"
                android:layout_marginRight="16sp"
                android:layout_marginEnd="16sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/video_for_points_section"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginBottom="15sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/playvideobutton"/>
            <TextView
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+200"
                android:textColor="@color/store"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/curvedstar"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_title_text"
                android:layout_width="125sp"
                android:gravity="center"
                android:text="ITEM NAME"
                android:fontFamily="@font/undinaru"
                android:textStyle="bold"
                android:layout_height="30sp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/titleholder"
                />


            <ImageView
                android:id="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:background="#ffffff"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5sp"
                />

        </RelativeLayout>

    </RelativeLayout>


    <com.thezs.fabianzachs.tapattack.MainMenu.Store.CustomViewPager
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/store_container">

    </com.thezs.fabianzachs.tapattack.MainMenu.Store.CustomViewPager>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        >

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            app:itemIconTint="#ffffff"
            app:itemTextColor="#ffffff"
            app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>


    </RelativeLayout>


</LinearLayout>