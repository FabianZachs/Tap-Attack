<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:gravity="center"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#99000000">
<!--
100% — FF
95% — F2
90% — E6
85% — D9
80% — CC
75% — BF
70% — B3
65% — A6
60% — 99
-->
<!-- marging bottom - only for vertical linear layout -->
<RelativeLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="50sp"
        android:id="@+id/game_over_text"
        android:text="GAME OVER"
        android:layout_centerHorizontal="true"
        android:textColor="@color/soundoff"
        android:fontFamily="@font/undinaru"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/game_over_reason"
        android:layout_width="wrap_content"
        android:layout_below="@+id/game_over_text"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:fontFamily="@font/undinaru"
        android:text="GAME OVER REASON"
        android:textSize="20sp" />


</RelativeLayout>


<RelativeLayout

    android:id="@+id/score_section"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/scoreerwr"
        android:textStyle="bold"
        android:fontFamily="@font/undinaru"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/best_score_text"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/undinaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEST: 100"
        android:layout_below="@id/scoreerwr"
        android:textSize="25sp"/>


</RelativeLayout>

<RelativeLayout

    android:paddingTop="5sp"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/double_points_image"
        android:src="@drawable/playvideobutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        android:layout_width="100sp"
        android:layout_height="100sp" />
    <TextView
        android:layout_below="@id/double_points_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOUBLE POINTS?"/>
</RelativeLayout>



<TextView
    android:layout_weight="1"
    android:id="@+id/points_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:fontFamily="@font/undinaru"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:text="+500 POINTS"
    />


<TextView
    android:layout_weight=".5"

    android:id="@+id/ok_button"
    android:onClick="exitClick"
    android:fontFamily="@font/undinaru"
    android:text="@string/ok"
    android:textColor="#000000"
    android:textSize="50sp"
    android:soundEffectsEnabled="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


<com.google.android.gms.ads.AdView
    android:layout_weight="1"
    android:layout_gravity="center"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    ads:adSize="BANNER"
    android:layout_below="@id/pauseSelections"
    ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
</com.google.android.gms.ads.AdView>

</LinearLayout>
