<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#000000"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thezs.fabianzachs.tapattack.MainMenu.Store.StoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/store_back_image"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".6"
            android:scaleY=".6"
            android:src="@drawable/storebackbutton"/>

        <RelativeLayout
            android:id="@+id/more_points_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/title_image1">

            <ImageView
                android:id="@+id/points_image"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="20sp"
                android:layout_toLeftOf="@+id/points_text"
                android:layout_toRightOf="@id/title_text"
                android:src="@drawable/curvedstar" />

            <TextView
                android:id="@+id/points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7sp"
                android:layout_marginRight="45sp"
                android:layout_marginTop="15sp"
                android:gravity="right"
                android:text="POINTS"
                android:textColor="@color/store"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/more_points_sign"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/morepointssign"
                android:layout_alignRight="@+id/points_text"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="10sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/random_unlock_text"
                android:layout_marginLeft="20sp"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/undinaru"
                android:textStyle="bold"
                android:text="RANDOM UNLOCK\n 500"
                android:textAlignment="center"
                android:background="@drawable/green_button00"
                />

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/curvedstar" />

        </RelativeLayout>


    </RelativeLayout>





    <com.thezs.fabianzachs.tapattack.MainMenu.CustomViewPager
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/store_container">

    </com.thezs.fabianzachs.tapattack.MainMenu.CustomViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        >

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            app:itemIconTint="#ffffff"
            app:itemTextColor="#ffffff"
            app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>


    </RelativeLayout>

    <!--
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">

    </com.google.android.gms.ads.AdView>
    -->

</LinearLayout>
