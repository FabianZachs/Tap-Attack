<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/dialog_shape">

<TextView
    android:text="PAUSED"
    android:id="@+id/paused"
    android:layout_centerHorizontal="true"
    android:textColor="@color/blackbackground"
    android:fontFamily="@font/undinaru"
    android:textSize="55sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_marginTop="40sp"
        android:id="@+id/pauseSelections"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/paused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:onClick="resumeClick"
            android:layout_margin="10sp"
            android:id="@+id/resumeButton"
            android:fontFamily="@font/undinaru"
            android:layout_centerHorizontal="true"
            android:text="@string/resume"
            android:textColor="@color/soundon"
            android:textSize="45sp"
            android:soundEffectsEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:onClick="exitClick"
            android:id="@+id/exit_button"
            android:layout_margin="10sp"
            android:fontFamily="@font/undinaru"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/resumeButton"
            android:text="@string/exit"
            android:textColor="@color/soundoff"
            android:textSize="45sp"
            android:soundEffectsEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_below="@id/pauseSelections"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
