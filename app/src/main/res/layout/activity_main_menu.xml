<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thezs.fabianzachs.tapattack.MainMenuActivity"
    android:background="@color/blackbackground">

    <LinearLayout
        android:gravity="start"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- should fade in on startup like in inkscape -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:scaleX=".9"
            android:scaleY=".7"
            android:adjustViewBounds="true"
            android:paddingLeft="10sp"
            android:src="@drawable/titletext" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:scaleY=".4"
            android:scaleX=".4"
            android:src="@drawable/startbluebluered"/>

        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAP ATTACK"
            android:fontFamily="@font/undinaru"
            android:textStyle="bold"
            android:textColor="#d93b3b"/>
        -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/store_img"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY=".6"
                android:scaleX=".6"
                android:layout_weight="2"
                android:src="@drawable/storethintext"/>

            <ImageView
                android:id="@+id/settings_img"
                android:soundEffectsEnabled="false"
                android:onClick="settingsClick"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY=".9"
                android:scaleX=".9"
                android:layout_weight="2"
                android:src="@drawable/settingstext"/>
        </LinearLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
